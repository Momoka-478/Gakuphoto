<table>
  <tbody>
      <% post.comments.each do |comment| %>
      <tr>
        
        <td>
          <%= link_to admin_admin_path(comment.admin) do %>
            <%= comment.admin.name %>
          <% end %>
        </td>
        <td><%= comment.comment %></td>
        <td>
          <% if comment.admin == current_admin %>
            <%= link_to "Destroy", post_comment_path(post, comment), method: :delete, class: "btn btn-danger pull-right" %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
<div class="container mt-5">
  <div class="row justify-content-center mb-4">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h3 class="card-title fw-bold"><%= @admin.name %></h3>
          <p class="text-muted">投稿一覧</p>
        </div>
      </div>
    </div>
  </div>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_image, class: "card-img-top", alt: post.title %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text text-muted"><%= truncate(post.body, length: 60) %></p>
          <p class="card-text">
            コメント数: <%= post.post_comments.count %>
          </p>
        </div>
        <div class="card-footer bg-white">
          <%= render "favorites/btn", post: post %>
        </div>
      </div>
    </div>
  <% end %>
</div>

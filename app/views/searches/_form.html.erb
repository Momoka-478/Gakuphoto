<% if user_signed_in? %>
  <div class="container mt-3">
    <%= form_with url: searches_search_path, method: :get, local: true, class: "row g-2 align-items-center" do |f| %>
      <div class="col-md-4">
        <%= f.text_field :content, class: "form-control", placeholder: "キーワードを入力" %>
      </div>
      <div class="col-md-3">
        <%= f.select :model,
          options_for_select({ "投稿者" => "admin", "タイトル" => "post" }),
          {}, class: "form-select" %>
      </div>
      <div class="col-md-3">
        <%= f.select :method,
          options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }),
          {}, class: "form-select" %>
      </div>
      <div class="col-md-2">
        <%= f.submit '検索', class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="container mt-4">
  <div class="card mb-4 shadow-sm">
    <div class="card-body d-flex align-items-center">
      <div>
        <h3 class="card-title mb-0"><%= @admin.name %></h3>
        <% if admin_signed_in? && @admin == current_admin %>
          <p class="mt-2">
            <%= link_to "プロフィール編集", edit_admin_admin_path(@admin) %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <%= link_to admin_post_path(post.id) do %>
          <%= image_tag post.get_image, class: "card-img-top", alt: post.title %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text text-muted"><%= truncate(post.body, length: 60) %></p>
          <p class="card-text">
            コメント数: <%= post.post_comments.count %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

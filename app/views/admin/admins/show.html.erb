<div class="container mt-4">
  <div class="card mb-4 shadow-sm">
    <div class="card-body d-flex align-items-center">
      <div>
        <h3 class="card-title mb-0"><%= @admin.name %></h3>
        <% if admin_signed_in? && @admin == current_admin %>
          <p class="mt-2">
            <%= link_to "プロフィール編集", edit_admin_admin_path(@admin) %>
          </p>
        <% end %>
      </div>
    </div>
  </div>


  <h4 class="mb-3">投稿一覧</h4>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <%= link_to admin_post_path(post) do %>
            <%= image_tag post.get_image %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text text-muted"><%= post.body %></p>
          </div>
        </div>
      <div>
    <% end %>
  </div>
</div>
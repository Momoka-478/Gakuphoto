<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">プロフィール編集</h2>

          <%= form_with model: @admin, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :name, "名前", class: "form-label" %>
              <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前", class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit "変更を保存", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

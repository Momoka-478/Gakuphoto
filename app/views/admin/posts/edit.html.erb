<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">投稿編集</h2>

          <%= form_with model: @post, url: admin_post_path(@post), method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :image, "画像", class: "form-label" %>
              <%= f.file_field :image, accept: "image/*", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :title, "タイトル", class: "form-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :body, "一言", class: "form-label" %>
              <%= f.text_area :body, rows: 4, class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit "保存", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
